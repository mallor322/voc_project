<view class="page">
    <view class="userinfo">
        <image class="userinfo-avatar fl_l" wx:if="{{userInfo}}" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        <text class="fl_l">{{userInfo.nickName}}</text>
    </view>

    <view class="weui-cells weui-cells_after-title">
        <navigator open-type="switchTab" url="../order/order" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">全部订单</view>
            <view class="weui-cell__ft weui-cell__ft_in-access">看看详情</view>
        </navigator>
        <view class="weui-cell weui-cell_access orders" hover-class="weui-cell_active">
            <navigator open-type="switchTab" url="../order/order" class="order-item">
                <image src="../../images/card.png"></image>
                <view class='text'>待付款</view>
            </navigator>
            <navigator open-type="switchTab" url="../order/order" class="order-item">
                <image src="../../images/car.png"></image>
                <view class='text'>待收货</view>
            </navigator>
            <navigator open-type="switchTab" url="../order/order" class="order-item">
                <image src="../../images/favorate.png"></image>
                <view class='text'>待评价</view>
            </navigator>
            <navigator open-type="switchTab" url="../order/order" class="order-item">
                <image src="../../images/refused.png"></image>
                <view class='text'>退款</view>
            </navigator>
        </view>
        <navigator url="../detail/detail" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../images/quan.png"></image>
            </view>
            <view class="weui-cell__bd">优惠券</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <navigator url="../detail/detail" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../images/emoji.png"></image>
            </view>
            <view class="weui-cell__bd">关于我们</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="../../images/online.png"></image>
            </view>
            <view class="weui-cell__bd">联系客服</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
    </view>

</view>


