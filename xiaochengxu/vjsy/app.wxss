/**app.wxss**/

page {
  height: 100%;
  font-family: "Microsoft Yahei";
}

.pages {
  width: 100%;
  height: 100%;
  display: flex;
  box-sizing: border-box;
  position: relative;
}

.container {
  flex: 1;
}

.default-btn {
  margin: 10rpx auto;
  width: 500rpx;
  height: 136rpx;
  color: #000;
  background-color: #f4d725;
}

.default-btn {
  height: auto;
  border-radius: 30px;
}

.default-btn .btn {
  line-height: 80rpx;
  color: #000;
  font-size: 32rpx;
  text-align: center;
  background: none;
  border: none;
  border-radius: 0;
}

button::after {
  border: 0;
  opacity: 0.7;
}

.reserve {
  width: 100%;
  height: 103rpx;
  line-height: 103rpx;
  position: relative;
}

.price-rmb {
  font-size: 21rpx;
}
