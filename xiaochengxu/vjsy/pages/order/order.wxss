.order-wrap .order-nav {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  display: flex;
  background: #fff;
  height: 27px;
  z-index: 100;
}

.order-wrap .order-nav .link {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  background: #fff;
}

.order-wrap .order-nav .link.active {
  color: #000;
  border-bottom: 2px solid #f4d725;
}

.img {
  display: block;
}

.order-wrap .order-nav .active image {
  position: absolute;
  width: auto;
  height: 6rpx;
  bottom: 0;
  left: 50%;
  margin-left: -75rpx;
}

.order-wrap .order-list {
  margin-top: 27px;
}

.order-wrap .order-list-bak {
  position: absolute;
  top: 62rpx;
  left: 0;
  right: 0;
  bottom: 0;
}

.order-wrap .order-item {
  position: relative;
  border-bottom: 1rpx solid #ddd;
  overflow: hidden;
}

.order-wrap .order-item .img image {
  float: left;
  width: 250rpx;
  height: 249rpx;
}

.order-wrap .order-item .img image {
  width: 300rpx;
  height: 200rpx;
  margin: 43rpx 25rpx;
}

.order-wrap .order-item .details {
  padding-left: 350rpx;
  height: 200rpx;
  margin-top: 43rpx;
  position: relative;
  color: #000;
}

.order-wrap .order-item .details .title {
  font-size: 26rpx;
  position: absolute;
  top: 0;

}
.details-referral{
  position: absolute;
  bottom: 0;
}

.order-wrap .order-item .details .no, .order-wrap .order-item .details .time,
.order-wrap .order-item .details .distributor {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.order-wrap .comment {
  position: absolute;
  right: 25rpx;
  bottom: 43rpx;
}

.order-wrap .comment button {
  text-align: center;
  border-radius: 50rpx;
  border: 0;
  width: 130rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 18rpx;
  color: #000;
  background-color: #f4d725;
}
.navigator-hover {
    border-radius: 50rpx;
}
