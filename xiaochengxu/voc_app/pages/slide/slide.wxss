/* slide.wxss */
.page {
  height: 100%;
  font-family: 'Microsoft Yahei';
}
.page-bottom{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: #f1f1f1;
  z-index: 0;
}
.wc{
  color: #333;
  padding: 24rpx 0 24rpx 60rpx;
}
.wc text{
    margin-left: 20rpx;
    position: relative;
    top: -4rpx;
}
.page-content{
  padding-top: 80rpx;
}
.page-top{
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: #f1f1f1;
  z-index: 0;
  transition: All 0.3s ease; 
  -webkit-transition: All 0.3s ease;
}
.page-top image{
  position: absolute;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  top: 20rpx;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(75%,0%); 
}
.c-state2{
  transform: rotate(0deg) scale(.8) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(.8) translate(75%,0%); 
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  top:0rpx;
  left: 0rpx;
  margin-top: 80rpx;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.mask{
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    width: 100%;
    height: 100%;
    background: black;
    opacity: 0.4;
}