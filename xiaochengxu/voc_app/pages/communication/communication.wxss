/* communication.wxss */
page{
    width: 100%;
    height: 100%;
}
.bg{
    width: calc( 100% - 60rpx);
    height: calc( 100% - 60rpx);
    padding: 30rpx;
}
.msglist{
    height: calc( 100% - 100rpx );
    width: 100%;
}
.send-area{
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    width: 100%;
    box-sizing: border-box;
}
.msg-bg{
    margin-bottom: 20rpx;
}
.msg{
    display: inline-block;
    padding: 12rpx 30rpx;
    color: #333;
    border-radius: 10rpx;
    text-align: center;
}
.msg:last-child{
    border: none;
}
.send-input{
    width: calc( 100% - 150rpx );
    height: 100rpx;
    line-height: 100rpx;
    border: 2rpx solid #ed6501;
    float: left;
    box-sizing: border-box;
    padding: 8rpx 16rpx;
    font-size: 30rpx;
}
.send-btn{
    width:150rpx;
    height: 100rpx;
    line-height: 100rpx;
    background: #ed6501;
    color: white;
    float: left;
    font-size: 30rpx;
    border: 2rpx solid #ed6501;
    text-align: center;
    box-sizing: border-box;
    border-radius:0rpx;
}