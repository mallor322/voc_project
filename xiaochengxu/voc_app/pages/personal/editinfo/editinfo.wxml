<view class="classname">
    <view class="empty-top"></view>
    <view class="weui-panel">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell__bd head">
                <view class="title">头像</view>
                <view class="value" bindtap="chooseImage">
                   <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
                </view>
                <view class="clear"></view>
            </view>
            <navigator url="../nickname/nickname" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd title">昵称</view>
                <view class="value">神猫</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="../mobile/mobile" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd title">手机</view>
                <view class="value">17091952061</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="../email/email" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd title">邮箱</view>
                <view class="value">9527@qq.com</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="../ewm/ewm" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd title">二维码</view>
                <view class="value">
                   <i class="iconfont icon-qr_code_light"></i>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd title">门锁</view>
                <view class="value">已绑定</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>
    </view>
    <view class="logout" bindtap="logout">
        <text>退出登录</text>
    </view>
</view>