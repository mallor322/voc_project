.weui-cell__bd{
    position: relative;
}
.weui-cell__bd .title{
    width: calc( 50% - 15px );
    padding-left: 15px;
    float: left;
    height: 136rpx;
    line-height: 136rpx;
    color: #666666;
}
.weui-cell__bd .value{
    width: calc( 50% - 25px );
    padding-right: 25px;
    text-align: right;
    float: left;
    height: 136rpx;
    line-height: 136rpx;
    color: #9c9c9c;
}
.title{
    color: #666666;
}
.value{
    color: #9c9c9c;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 18rpx;
  border-radius: 50%;
}
.head::after{
    content:" ";
    display:inline-block;
    height:6px;
    width:6px;
    border-width:2px 2px 0 0;
    border-color:#C8C8CD;
    border-style:solid;
    -webkit-transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top:-2px;
    position:absolute;
    top:50%;
    margin-top:-4px;
    right:18px;
}
.logout{
    width: 100%;
    margin-top: 30rpx;
    text-align: center;
    color: red;
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
    font-size: 30rpx;
}
.weui-cells::before{
    border-top: none;
}
.weui-cells::after{
    border-bottom: none;
}