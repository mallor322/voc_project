page {
    background-color:#f1f1f1;
    font-family:Microsoft yahei;
    height:100%;
}
.gesture-content{
    height: 100%;
    width: 750rpx;
    position: fixed; 
}
.container{
    height: 100%;
    width: 750rpx;
    position: fixed; 
    z-index: 0;
}
.gesture-lock {
    margin: 100rpx auto;
    width: 300px;
    height: 300px;
    background-color: #f1f1f1;
}
.message{
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    height: 200rpx;
    line-height: 200rpx;
}
