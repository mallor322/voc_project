.open-keyboard{
  height: 800rpx;
  width: 750rpx;
  position: fixed; 
  bottom:-800rpx;
  left: 0rpx;
  background-color: #e1e1e1;
  transition: bottom 0.2s ease-in-out;  
  z-index: 999;
}
page, .mask, .page{
    width: 100%;
    height: 100%;
}
.save-bg{
    margin-top: 0rpx;
}
.mask{
    background: #000;
    opacity: 0.6;
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    z-index: 0;
}
.pwd-content{
    text-align: center;
    font-size: 30rpx;
}
.area{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.pwd-grids {
  border-top: 1rpx solid #aaa;
  border-left: 1rpx solid #aaa;
  overflow: hidden;
  width:650rpx;
  border-radius: 6rpx;
}
.pwd-grid {
  position: relative;
  float: left;
  padding: 10rpx;
  width: 16.6666666%;
  box-sizing: border-box;
  border-right: 1rpx solid #aaa;
  border-bottom: 1rpx solid #aaa;
  height: 108rpx;
}
.input-point{
    font-size: 66rpx;
}
.keyboard{
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
}
.weui-grids{
    border-left: 1rpx solid #e1e1e1;
}
.weui-grid{
    padding: 20rpx;
}
.weui-grid:nth-child(3), .weui-grid:nth-child(6), .weui-grid:nth-child(9){
     border-right: none;
}
.weui-grid:nth-child(10), .weui-grid:nth-child(11), .weui-grid:nth-child(12){
     border-bottom: none;
}
.key-black{
    background-color: #dbdbdb;
}
.weui-del_active{
    background-color: #fff;
}
.delete-btn{
    width: 60rpx;
}
.noword{
    color: #dbdbdb;
}
.weui-del_active{
    background-color: #ECECEC;
}
.title{
    height: 150rpx;
    line-height: 150rpx;
    margin-top: 20rpx;
    color: #333;
}