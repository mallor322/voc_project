page{
    z-index: 0;
}
.pullContent{
    z-index: 2;
}
page, .pullContent{
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    background: #0000ff;
}
.header{
    position: absolute;
    left: 0rpx;
    top:0rpx;
    z-index: 1;
    height: 0rpx;
    width: 100%;
    background: #ff0000;
    display: flex;
    justify-content: center;
    align-items: center;
}
.detail{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.header image{
    width: 50rpx;
    height: 50rpx;
    opacity: 0;
}
